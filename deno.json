{
	"$schema": "https://deno.land/x/deno@v1.29.0/cli/schemas/config-file.v1.json",

	"importMap": "import_map.json",
	"fmt": {
		"files": {
			"include": ["*"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
