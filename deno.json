{
	"$schema": "https://deno.land/x/deno@v1.29.0/cli/schemas/config-file.v1.json",

	"importMap": "import_map.json",
	"tasks": {
		"dev": "denon run --allow-net --allow-read --allow-write index.ts"
	},
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 100,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
